<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_crop_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.babbangona.barcodescannerproject.SelectCropSummary">


    <TextView
        android:text="Select Seed Variety:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/selectCropLabel" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectSeedTypeLabel"
        android:hint="@string/seedtype"
        android:layout_below="@id/selectCropLabel"
        style="@style/ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/selectSeedType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:text="@string/showCropSummary"
        android:textAllCaps="false"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectSeedTypeLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/nextCropSummary" />

</RelativeLayout>
